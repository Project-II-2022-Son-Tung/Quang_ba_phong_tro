{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "lib": ["ES2018"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "outDir": "dist",
    "removeComments": true
  },
  "include": ["src/**/*"]
}
